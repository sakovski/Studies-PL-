<p id="notice" class="text-center"><%= notice %></p>
<div class="container">
  <div class="d-inline-block">
    <h1>Book details</h1>
  </div>
  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= @book.genre %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= @book.year %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @book.description %>
  </p>

  <%= link_to 'Edit', edit_book_path(@book), :class => "btn btn-info btn-sm" %> |
  <%= link_to 'Back', books_path, :class => "btn btn-info btn-sm" %>
</div>
