<p id="notice" class="text-center"><%= notice %></p>

<div class="container">
  <div class="d-inline-block">
    <h1>Books</h1>
    <%= link_to 'New Book', new_book_path, :class => "btn btn-primary btn-sm"%>

<div style="float: right; margin-bottom:5px">
  <%= form_tag(books_path, method: :get) do %>
    <%= text_field_tag :toSearch, params[:toSearch] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
</div>

  <div>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th align="center"><%= sortable "title", "title" %></th>
        <th align="center"><%= sortable "author", "author" %></th>
        <th align="center"><%= sortable "genre", "genre" %></th>
        <th align="center"><%= sortable "year", "year" %></th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td align="center"><%= book.title %></td>
          <td align="center"><%= book.author %></td>
          <td align="center"><%= book.genre %></td>
          <td align="center"><%= book.year %></td>
          <td align="center"><%= link_to 'Details', book, :class => "btn btn-info btn-sm" %></td>
          <td align="center"><%= link_to 'Edit', edit_book_path(book), :class => "btn btn-info btn-sm" %></td>
          <td align="center"><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @books %>
    </div>
    <%= will_paginate @books, :container => false %>
  </div>

<br>
